            "LoginRequest": {
                "type": "object",
                "properties": {
                    "identifier": {
                        "type": "string",
                        "example": "hqi@mail.com/HqiSkmr"
                    },
                    "password": {
                        "type": "string",
                        "example": "H12345678"
                    }
                },
                "xml": {
                    "name": "LoginRequest"
                }
            },
            "RemoveMediaRequest": {
                "type": "object",
                "properties": {
                    "fileUrl": {
                        "type": "string",
                        "example": "https://res.cloudinary.com/dh1nhrlhu/image/upload/v1740468415/a9njgyhcqpm1zlbqu2ck.jpg"
                    }
                },
                "xml": {
                    "name": "RemoveMediaRequest"
                }
            },
            "DestinationRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Raja Ampat"
                    },
                    "country": {
                        "type": "string",
                        "example": "Indonesia"
                    },
                    "description": {
                        "type": "string",
                        "example": "Destiansi ke raja ampat"
                    },
                    "images": {
                        "type": "array",
                        "example": [
                            "https://res.cloudinary.com/dh1nhrlhu/image/upload/v1742823904/aiztnavnm1bbavwuxwkf.jpg",
                            "https://res.cloudinary.com/dh1nhrlhu/image/upload/v1742823903/bpbho5y1kfiwdj83jo2s.jpg"
                        ],
                        "items": {
                            "type": "string"
                        }
                    },
                    "attractions": {
                        "type": "array",
                        "example": ["Pantai Batu Bolong", "Pura Besakih"],
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "xml": {
                    "name": "DestinationRequest"
                }
            },
            "TourRequest": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Tour to Raja Ampat"
                    },
                    "slug": {
                        "type": "string",
                        "example": "tour-to-raja-ampat"
                    },
                    "destination": {
                        "type": "string",
                        "example": "65a2d1f7d1e42b001e8b5f60"
                    },
                    "description": {
                        "type": "string",
                        "example": "Explore the breathtaking beauty of Raja Ampat with this exclusive tour package."
                    },
                    "itinerary": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "day": {
                                    "type": "number",
                                    "example": 2
                                },
                                "detail": {
                                    "type": "string",
                                    "example": "Day 2: Snorkeling at famous dive sites and island hopping."
                                },
                                "image": {
                                    "type": "string",
                                    "example": "https://res.cloudinary.com/dh1nhrlhu/image/upload/v1742823903/bpbho5y1kfiwdj83jo2s.jpg"
                                }
                            }
                        }
                    },
                    "maxParticipant": {
                        "type": "number",
                        "example": 10
                    },
                    "isRecurring": {
                        "type": "boolean",
                        "example": false
                    },
                    "duration": {
                        "type": "number",
                        "example": 3
                    },
                    "availability": {
                        "type": "object",
                        "properties": {
                            "availableDays": {
                                "type": "array",
                                "example": [],
                                "items": {}
                            },
                            "fixedDates": {
                                "type": "array",
                                "example": ["2025-06-15", "2025-07-20", "2025-08-10"],
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "price": {
                        "type": "object",
                        "properties": {
                            "adult": {
                                "type": "number",
                                "example": 2000000
                            },
                            "child": {
                                "type": "number",
                                "example": 1500000
                            }
                        }
                    }
                },
                "xml": {
                    "name": "TourRequest"
                }
            },
            "BannerRequest": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Banner 1"
                    },
                    "image": {
                        "type": "string",
                        "example": "https://res.cloudinary.com/dh1nhrlhu/image/upload/v1742823904/aiztnavnm1bbavwuxwkf.jpg"
                    },
                    "isShow": {
                        "type": "boolean",
                        "example": true
                    }
                },
                "xml": {
                    "name": "BannerRequest"
                }
            }
        }
